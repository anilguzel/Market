<a href="~/Category/Insert" class="btn btn-primary pull-right">@Market.Core.Entities.Resources.CategoryTexts.Ekle</a><br /><br />
<hr />
<div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Category Id</th>
            <th>@Market.Core.Entities.Resources.CategoryTexts.KategoriAdi</th>
            <th>Is Active</th>
            <th>Order Count</th>

        </tr>
        </thead>
        <tbody id="tblCategory"></tbody>
    </table>
</div>
<br /><br />
<hr />
<h2></h2><br />
<form id="CategoryUpdateForm" class="form-horizontal">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Category Id</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="CategoryId" id="CategoryId" placeholder="" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Category Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="CategoryName" id="CategoryName" placeholder="Category Name" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">IsActive</label>
        <div class="col-sm-10">
            <input type="checkbox" class="form-control" name="IsActive" id="IsActive" required>
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Category Name</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" name="Order" id="Order" placeholder="Order Count" required>
        </div>
    </div>

    <div class="col-sm-5">
        <input type="button" id="btnCategoryUpdate"  value="Update" class="btn btn-primary pull-right">
    </div>
    <div class="clearfix"></div>
</form>


<script language="javascript">
    $(document).ready(function () {
        CategoryList();
    });

</script>
